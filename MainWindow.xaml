<Window
    x:Class="CMP332.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CMP332"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="clr-namespace:CMP332.Views"
    xmlns:vms="clr-namespace:CMP332.ViewModels"
    xmlns:components="clr-namespace:CMP332.Views.Components"
    xmlns:modalControl="clr-namespace:ModalControl;assembly=ModalControl"
    Title="Demo"
    Width="900"
    Height="600"
    mc:Ignorable="d">
    <Grid>
        <Grid.Resources>
            <DataTemplate DataType="{x:Type vms:LoginViewModel}">
                <views:LoginView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type vms:HomeViewModel}">
                <views:HomeView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type vms:LayoutViewModel}">
                <components:Layout />
            </DataTemplate>
        </Grid.Resources>

        <!--Imported Package from - https://github.com/SingletonSean/wpf-ui-workshops-->
        <modalControl:Modal Panel.ZIndex="1" IsOpen="{Binding IsOpen}">
            <ContentControl Content="{Binding CurrentModalViewModel}" />
        </modalControl:Modal>


        <ContentControl Content="{Binding CurrentViewModel}" />
    </Grid>
</Window>
